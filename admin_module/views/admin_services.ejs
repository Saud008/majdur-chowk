<html>

<head>
    <title>Admin Panel:Services</title>
    <link rel="stylesheet" href="admin_services.css">
    <link rel="icon" type="image/x-icon" href="/images/logo_2.png">
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>

<body>
  <%- include('partials/admin_nav'); -%>
        <header>
            <h1>
                <label class="nav-toggle">
                    <span class="   "></span>
                </label>
                Services
            </h1>
            

            <div class="user-wrapper">
                
                <span class="las la-user" height="50px" style="margin-right: 10px;"></span>
                <div>
                    <% var firstName = fullName.split(" ")[0]; %>
                    <h4><%= firstName %></h4>
                    <small>Super Admin</small>
                </div>
            </div>
        </header>
    </div>

    
    <div class="main-content">
        <div style="margin-right: 200px; "><a href="/addService" class="add">
            <span style="color: white;"><i class="las la-plus"></i> Add Service</span></a>
    </div>
    <div class="main-content" style="margin-left: 20px; margin-top: 30px; margin-bottom: 500px;">
      <div style="margin-right: 10px;"><a href="/addSubCategory" class="add">
          <span style="color: white;"><i class="las la-plus"></i> Add SubCategory</span></a>
  </div>
        <div class="order_table">
            <label for="search">Search Service:</label>
            <input type="text" id="search" name="search" style="margin-bottom: 10px;">
  
            <table>
                <thead style ="text-align: center;">
                    <tr>
                        <th>Sr No.</th>
                        <th>Category</th>
                        <th>Service Name </th>
                        <th>Update&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;Delete</th>
                    </tr>
                </thead>
                <tbody style="text-align: center;">
                    <% let count = 1; %>
                    <% services.forEach(service => { %>
                      <tr>
                        <td><%= count++ %></td>
                        <td><%= service.type.categoryName %></td>
                        <td><%= service.name %></td>
                        <td class="format">
                          <a href="/updateService/<%= service.id %>" class="lar la-edit" style="font-size: 32px; color: black;"></a>
                          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                          <a href="#" id="" data-record-id="<%= service.id %>" class="las la-trash deleteLink" style="font-size: 32px; color: black;"></a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
            </table>

        </div>
            
        
    </div>

    <script src="/delete.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
          // Add event listener for keyup on search input field
          $("#search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("tbody tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
      </script>
</body>

</html>