<!DOCTYPE html>
<html lang="en">
    <%- include('partials/index_header'); -%>

<body>
    <div class="head">
        <div class="header1">
            <div class="container">
                <div class="a">
                <div class="navbar">
                    <div class="logo">
                        <a href="/"><img src="images/logo.png" width="125px"></a>
                    </div>
                    <nav>
                        <ul id="MenuItems">
                            <li><a href="/">Home</a></li>
                            <li><a href="/services">Services</a></li>
                            <li><a href="/about">About</a></li>
                            <li><a href="/contact">Contact</a></li>
                        </ul>
                    </nav>
                    <% if(status == 1) { %>
                        <div class="dropdown">
                            <a href="#"><img src="images/profile_avatar_main.png" style="height: 45px; margin-right: 15px;" class="dropbtn"></a>
                            <div class="dropdown-content">
                                <a href="#">My Account</a>
                                <a href="#">My Orders</a>
                                <a href="#">Wishlist</a>
                                <a href="/signOut">Sign Out</a>
                            </div>
                        </div>
                    <% }
                     else { %>
                    <a href="/login" style="margin-right: 15px;">LOGIN</a>
                    <% } %>
                    <a href="/cart"><img src="images/cart_dark.png" height="30px" width="30px" style="margin-top: 5px; margin-right: 10px;"></a>
                </div> 
        </div>
        <hr style="display: block;">
    </div>
    </div>
    </div>
        

        <% if (message === "Services Found") { %>
            <h1 style="text-align: center;"><%=message%></h1>
            <div class="categories">
                <div class="small-container">
                    <div class="row">
                            <% for(var i=0; i < service.length; i++) { %>
                                 <div class="col-3">
                                    <a href="/service-search/<%= service[i]._id %>"><img src="<%= service[i].imagePath %>"></a>
                                    <h3><%= service[i].categoryName %> Service </h3>
                                </div>
                          <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/services" class="btn" style="margin-left:45%"> Explore All &#8594;</a>
        <% } else { %>
            <h1 style="text-align: center; margin: auto; margin-top: 10px;"><%=message%></h1>
            <a href="/services" class="btn" style="margin-left:45%"> Explore All &#8594;</a>
            <div style="padding-bottom: 250px;"></div>
        <% } %>
    </h1>

      
    <%- include('partials/footer'); -%>
</body>
</html>