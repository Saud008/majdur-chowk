<html>

<head>
    <title>Admin Panel:Add Service Agent</title>
    <link rel="stylesheet" href="admin_service_form.css">
    <link rel="icon" type="image/x-icon" href="images/logo_2.png">
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>

<body>
  <%- include('partials/admin_nav'); -%>
        <header>
            <h1>
               
                Add Service Agent
            </h1>
            <div class="user-wrapper">
                
                <span class="las la-user" height="50px" style="margin-right: 10px;"></span>
                <div>
                    <% var firstName = fullName.split(" ")[0]; %>
                    <h4><%= firstName %></h4>
                    <small>Super Admin</small>
                </div>
            </div>
        </header>
    </div>
    <div class="main-content">
        <div class="cards">
          <div class="card-double">
            <div>
              <form action="/addServiceAgent" method="post" enctype="multipart/form-data">
                <table id="add-a-service">
                  <tr>
                    <td>
                      <label class="service">Category of the Service</label>
                    </td>
                    <td>
                      <select id="category" name="category" required>
                        <option>Select Category</option>
                        <% serviceCategories.forEach(category => { %>
                        <option value="<%= category._id %>"><%= category.categoryName %></option>
                        <% }) %>
                      </select>
                    </td>
                  </tr>
                  
                  <tr>
                    <td>
                      <label class="service">Name of the Service Agent</label>
                    </td>
                    <td>
                      <input type="text" id="first-name" name="name" required>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <label class="service">Username of Service Agent</label>
                    </td>
                    <td>
                      <input type="text" id="first-name" name="userName" required>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <label class="service">Password of Service Agent</label>
                    </td>
                    <td>
                      <input type="password" id="first-name" name="password" required>
                    </td>
                  </tr>
                    <tr>
                      <td>
                        <label class="service">Image</label>
                      </td>
                    <td>
                      <input type="file" name="image" accept="image/*">
                    </td>
                  </tr>
                </table>
                <center>
                  <input type="submit" name="submit" value="Add">
                </center>
              </form>
            </div>
          </div>
        </div>
      <div class="back_btn">
          <a href="/services" style="color:white; text-align: center;">Back</a>
      </div>
      </div>
      
        

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  
</script>

</body>

</html>
