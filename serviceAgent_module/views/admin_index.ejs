<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Admin Panel:Dashboard</title>
    <link rel="icon" type="image/x-icon" href="images/logo_2.png">
    <link rel="stylesheet"href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="admin_style.css">
</head>

<body>
    <%- include('partials/admin_nav'); -%>
    <div class="main-content">
        <header>
            <h1>
                <label for="nav-toggle">
                    
                </label>
                Dashboard
            </h1>
           
            <div class="user-wrapper">
                
                <span class="las la-user" height="50px" style="margin-right: 10px;"></span>
                <div>
                    <% var firstName = fullName.split(" ")[0]; %>
                    <h4><%= firstName %></h4>
                    <small>Super Admin</small>
                </div>
            </div>
        </header>

        <main>

            <div class="cards">
                <div class="card-single">
                    <div>
                        <h1><%=customerCount%></h1>
                        <span>New Cutomers(Monthly)</span>
                    </div>
                    <div>
                        <span class="las la-users"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <h1><%=orderCount%></h1>
                        <span>Total Orders(Monthly)</span>
                    </div>
                    <div>
                        <span class="las la-shopping-bag"></span>
                    </div>
                </div>

                <div class="card-single">
                    <div>
                        <h1><span class="las la-rupee-sign" style="size: 48px; color: black;"></span><%=totalRevenue%></h1>
                        <span>Total Revenue(Monthly)</span>
                    </div>
                    <div>
                        <span class="las la-rupee-sign"></span>
                    </div>
                </div>
                
            </div>
            <div class="recent-grid">
                <div class="projects">
                    <div class="card">
                        <div class="card-header">
                            <h3>Top 3 Trending Services(Monthly) </h3>

                            <a href="/services" class="seeAll">See All</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table width="100%">
                                   
                                        <thead>
                                          <tr>
                                            <td>Service Name</td>
                                            <td>No. of Orders</td>
                                            <td>Revenue</td>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          <% topServices.forEach(service => { %>
                                          <tr>
                                            <td><%= service.serviceName %></td>
                                            <td><%= service.totalBookings %></td>
                                            <td>
                                              <span class="las la-rupee-sign" style="size: 48px; color: black;"></span>
                                              <%= service.totalRevenue %>
                                            </td>
                                          </tr>
                                          <% }) %>
                                        </tbody>
                                      </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="customers">
                    <div class="card">
                        <div class="card-header">
                            <h3>New Customers</h3>

                            <!-- <a href="/users" class="seeAll">See All</a> -->
                        </div>
                        <div class="card-body">
                            <% recentUsers.forEach(customer => { %>
                                <div class="customer">
                                    <div class="info">
                                        <i class="las la-user" style="margin-right: 10px;"></i>
                                        <div>
                                            <h4><%= customer.fullName %></h4>
                                            <small>Customer</small>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                              
        </main>
    </div>
</body>

</html>